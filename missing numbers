class Solution {
public:
    int missingNumber(vector<int>& nums) {
        int n = nums.size();
        int totalSum = n * (n + 1) / 2; // Sum of the first n natural numbers
        int arraySum = 0;
        
        for (int num : nums) {
            arraySum += num; // Sum of the numbers in the array
        }
        
        return totalSum - arraySum; // The missing number
    }
};
